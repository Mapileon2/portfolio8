# Client-side Environment Variables for Vite
# Copy this to .env.local and update with your Firebase project details

# Firebase Configuration (Client-side - Public)
VITE_FIREBASE_API_KEY=your-public-api-key
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=123456789
VITE_FIREBASE_APP_ID=1:123456789:web:abcdef123456
VITE_FIREBASE_DATABASE_URL=https://your-project-default-rtdb.firebaseio.com

# Admin Configuration (Multiple emails supported)
VITE_ADMIN_EMAILS=your-email@gmail.com,second-admin@gmail.com
VITE_ADMIN_EMAIL=your-email@gmail.com

# Firebase Analytics (Optional)
VITE_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# Development Mode (set to false for production)
VITE_DEV_MODE=true